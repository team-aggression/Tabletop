            </s:TagVisualizer.Definitions>
            <Grid x:Name="TagVisualizerRoot">
                <Ellipse Height="188" HorizontalAlignment="Left" Margin="48,61,0,0" Name="ellipse1" Stroke="Black" VerticalAlignment="Top" Width="216" />
