<UserControl x:Class="TabletopComputing.Views.PaintingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="http://schemas.microsoft.com/surface/2008"
             xmlns:data="clr-namespace:TabletopComputing.Data"
             x:Name="This"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <data:SurfaceInkEditingModeToBoolConverter x:Key="SurfaceInkEditingModeToBoolConverter" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <s:TagVisualizer x:Name="TagVisualizer">
            <s:TagVisualizer.Definitions>
                <s:TagVisualizationDefinition Source="Controls/FaceTagVisualization.xaml"
                                                  TagRemovedBehavior="Fade"
                                                  Value="2"
                                                  MaxCount="1"
                                                  />
                <s:TagVisualizationDefinition Source="Controls/BeatTag.xaml"
                                                  TagRemovedBehavior="Fade"
                                                  Value="0"
                                                  MaxCount="1"
                                                  />
            </s:TagVisualizer.Definitions>
            <Grid x:Name="TagVisualizerRoot">
                <s:SurfaceInkCanvas x:Name="PaintingInkCanvas" Background="Transparent" />
                
                <s:ScatterView x:Name="TagVisualizerScatterView"
                               s:TagVisualizer.IsTagVisualizationHost="True"
                               ItemContainerStyle="{DynamicResource EmptyScatterViewItemStyle}"
                               Margin="100" />
            </Grid>
        </s:TagVisualizer>
       
    </Grid>
</UserControl>
